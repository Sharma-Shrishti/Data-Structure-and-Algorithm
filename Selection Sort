arr=[5,8,1,0,-4,2,9]
print(arr)
def selection_sort(arr):
    for i in range(0,len(arr)):
        m=arr[i]   
        index=i
        for j in range(i+1,len(arr)):  
            if arr[j]<m:
                m=arr[j]   
                index=j   
        arr[i],arr[index]=arr[index],arr[i]  
    
selection_sort(arr)
print(arr)
    
 
